  level_id: {{ club_level_parts[3] }}
{%- endcomment -%}

{% assign button_class = "button btn Button Bloom__Button Bloom__Button--Primary uk-button-" | append: section.settings.button_size %}
{% assign inverted_button_class = "button btn Button Bloom__Button Bloom__Button--Inverted uk-button-" | append: section.settings.button_size %}
